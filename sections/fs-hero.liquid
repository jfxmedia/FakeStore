      "default": "https://www.google.com"
    },
    {
      "type": "text",
      "id": "button_3_text",
      "label": "Button 3 Text",
      "default": "KIDS"
    },
    {
      "type": "text",
      "id": "button_3_url",
      "label": "Button 3 URL",
      "default": "https://www.google.com"
    },
    {
      "type": "text",
      "id": "button_4_text",
      "label": "Button 4 Text",
