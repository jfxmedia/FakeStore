{%- style -%}  
.hero-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
    padding-bottom: 22px;
  }
  
  .hero-section-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .hero-section-content {
    position: absolute;
    top: 50%; 
    left: 30%; 
    transform: translate(-50%, -50%);
    display: flex;
    color: #ffffff; 
    text-align: center; 
    padding: 10px;
    box-sizing: border-box;
    z-index: 1;
  }

  
  .hero-section-text {
    color: #141414;
    text-align: center;
  }
  
  .hero-section-subtitle {
    font-size: 2rem;
    font-weight: 400;
    margin-bottom: 20px;
  }
  
  .hero-section-text h1 {
    font-size: 8rem;
    font-weight: bold;
  }

  .hero-section-buttons a {
    display: inline-block;
    margin: 10px;
    padding: 15px 50px;    background-color: #141414;
    color: #ffffff;
    text-decoration: none;
    border-radius: 5px;
  }
  
{%- endstyle -%}
<section class="hero-container">
  <div class="hero-section-image">
    <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_image.alt | escape }}">
  </div>
  <div class="hero-section-content">
    <div class="hero-section-text">
      {% if section.settings.subtitle != blank %}
        <div class="hero-section-subtitle">{{ section.settings.subtitle | raw }}</div>
      {% endif %}
      {% if section.settings.title != blank %}
        <h1>{{ section.settings.title }}</h1>
      {% endif %}
      <div class="hero-section-buttons">
        {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
          <a href="{{ section.settings.button_1_url }}" class="btn">{{ section.settings.button_1_text }}</a>
        {% endif %}
        {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
          <a href="{{ section.settings.button_2_url }}" class="btn">{{ section.settings.button_2_text }}</a>
        {% endif %}
        {% if section.settings.button_3_text != blank and section.settings.button_3_url != blank %}
          <a href="{{ section.settings.button_3_url }}" class="btn">{{ section.settings.button_3_text }}</a>
        {% endif %}
        {% if section.settings.button_4_text != blank and section.settings.button_4_url != blank %}
          <a href="{{ section.settings.button_4_url }}" class="btn">{{ section.settings.button_4_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>


