<section class="hero-container">
  <div class="hero-section-image">
    <img
      src="{{ section.settings.hero_image | img_url: 'master' }}"
      alt="{{ section.settings.hero_image.alt | escape }}"
    >
  </div>
  <div class="hero-section-content">
    <div class="hero-section-text">
      {% if section.settings.subtitle != blank %}
        <div class="hero-section-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
      {% if section.settings.title != blank %}
        <h1>{{ section.settings.title }}</h1>
      {% endif %}
      <div class="hero-section-buttons">
        {% for block in section.blocks %}
          {% if block.settings.button_text != blank and block.settings.button_url != blank %}
            <a href="{{ block.settings.button_url }}" class="primary-button">{{ block.settings.button_text }}</a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Fakestore Hero",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section Settings"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Upload the main image for the hero section."
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>IN STORES & ONLINE</p>"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<h1>50% OFF EVERYTHING</h1>"
    }
  ],
  "blocks": [
    {
      "name": "Buttons",
      "type": "button",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "TEXT"
        },
        {
          "type": "text",
          "id": "button_url",
          "label": "Button URL",
          "default": "https://www.google.com"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FS Hero",
      "category": "Fakestore"
    }
  ]
}
{% endschema %}
