{%- style -%}
  .perks-container {
    display: flex;
    background-color: #F7F8F8;
    align-items: center;
    flex-direction: column;
    margin: 22px 0;
    padding: 30px 0;
    height: auto;
  }

  .perks {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: row;
    flex: 1;
  }

  .perk {
    text-align: center;
    padding: 20px;
  }

  .perk-icon {
    width: 100px;
    height: 100px;
    padding: 15px;
    margin-bottom: 10px;
  }

  .perk p {
    max-width: 80%;
    text-align: center;
    margin: auto;
  }

{%- endstyle -%}


<div class="perks-container">
    {% if section.settings.title != blank %}
        <div class="title">{{ section.settings.title }}</div>        
    {% endif %}
    <div class="perks">
        {% for block in section.blocks %}
            <div class="perk">
                <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="Perk Icon" class="perk-icon">
                <p>{{ block.settings.text }}</p>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Fakestore Perks",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Fakestore Perks"
        }
    ],
    "blocks": [
    {
        "type": "perk",
        "name": "Perk",
        "settings": [
        {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon",
            "info": "Select an icon for the perk."
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text",
            "info": "Enter the text for the perk."
        }
        ]
    }
    ],
    "presets": [
    {
        "name": "Fakestore Perks",
        "category": "Fakestore"
    }
    ]
}
{% endschema %}    
