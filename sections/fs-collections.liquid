        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.image_1.alt | escape }}">
      </div>
      <div class="content">
        <h2>{{ section.settings.title_1 }}</h2>
        <p>{{ section.settings.subtitle_1 }}</p>
        <div class="buttons">
          {% if section.settings.button_1_text_1 != blank and section.settings.button_1_url_1 != blank %}
