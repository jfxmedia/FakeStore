<div class="container">
  <div class="collection-container">
    <div class="collection-content-container">
      <div class="background-image">
        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.image_1.alt | escape }}">
      </div>
      <div class="content">
        <h2>{{ section.settings.title_1 }}</h2>
        <p>{{ section.settings.subtitle_1 }}</p>
        <div class="buttons">
          {% for block in section.blocks %}
            {% if block.settings.button_1_text != blank and block.settings.button_1_url != blank %}
              <a href="{{ block.settings.button_1_url }}">{{ block.settings.button_1_text }}</a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="collection-content-container">
      <div class="background-image">
        <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.image_2.alt | escape }}">
      </div>
      <div class="content">
        <h2>{{ section.settings.title_2 }}</h2>
        <p>{{ section.settings.subtitle_2 }}</p>
        <div class="buttons">
          {% for block in section.blocks %}
            {% if block.settings.button_2_text != blank and block.settings.button_2_url != blank %}
              <a href="{{ block.settings.button_2_url }}">{{ block.settings.button_2_text }}</a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Fakestore Collections",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1",
      "info": "Upload background image for column 1."
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1"
    },
    {
      "type": "text",
      "id": "subtitle_1",
      "label": "Subtitle 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2",
      "info": "Upload background image for column 2."
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2"
    },
    {
      "type": "text",
      "id": "subtitle_2",
      "label": "Subtitle 2"
    }
  ],
    "blocks": [
      {
        "name": "Buttons 1",
        "type": "buttons_1",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "button_1_text",
            "label": "Button 1 Text",
            "default": "TEXT"
          },
          {
            "type": "text",
            "id": "button_1_url",
            "label": "Button 1 URL",
            "default": "https://www.google.com"
          }
        ]
      },
      {
        "name": "Buttons 2",
        "type": "buttons_2",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "button_2_text",
            "label": "Button 2 Text",
            "default": "TEXT"
          },
          {
            "type": "text",
            "id": "button_2_url",
            "label": "Button 2 URL",
            "default": "https://www.google.com"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Fakestore Collections",
      "category": "Fakestore"
    }
  ]
}
{% endschema %}
